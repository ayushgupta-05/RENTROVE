<%- layout('/layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">

    <br><br>

    <h3>Edit Listing</h3>
    
        <form method="POST" action="/listings/<%=listing._id%>?_method=PUT"
            class="needs-validation" novalidate
            enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label">Enter Title</label>
            <input type="text" name="listing[title]" id="title"  value="<%= listing.title%>"
            required
            class="form-control"> 

        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="description" cols="30" rows="10" 
            required
            class="form-control">
                <%= listing.description %>
                </textarea>
        </div>
        
        <div class="mb-3"> 
            Original Listing image <br>
            <img src="<%= listing.image.url %>" height="150px" alt="">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload new image</label>
            <!-- <input type="file" name="listing[image][url]" 
            class="form-control"> -->
            <input type="file" name="image" class="form-control">
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" id="price" value="<%= listing.price%>"
                required
                class="form-control">    
            </div>

            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" id="country" value="<%= listing.country%>"
                required
                class="form-control">
            </div>

        </div>


        
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" id="location" value="<%= listing.location%>"
            class="form-control">    
        </div>
        
        
        <button class="btn btn-dark add-btn mt-3">Edit</button>
        <br><br>
        
    </form>
    </div>
</div>
</body>
